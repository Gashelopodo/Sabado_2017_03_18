<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->



        <!-- SETEO LOS EFECTOS DE TRANSICIÓN DE ELEMENTOS COMPARTIDOS -->
        <item name="android:fragmentSharedElementEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_image_transform</item>

        <!-- SETEO LOS EFECTOS DE TRANSICIÓN PARA LA ENTRADA-SALIDA -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/fade</item>

        <!-- SETEO LOS EFECTOS DE TRANSICIÓN PARA LA SALIDA-REENTRADA -->
        <item name="android:windowReturnTransition">@transition/fade</item>
        <item name="android:windowReenterTransition">@transition/explode</item>

        <!-- PERMITO QUE SE VISUALICEN TODAS LAS TRANSICIONES SIN QUE SE SOLAPEN -->
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>

        <item name="android:windowSharedElementsUseOverlay">true</item>


        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
